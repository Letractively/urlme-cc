@model movies.Site.ViewModels.Home.Index
@using movies.Site.ViewModels.Shared
@using movies.Model

@{
    ViewBag.Title = "Movie Ratings - Top Box Office";
}

@section ExtraHeadContent {
}

<div data-role="page" id="whatsHot">
    @{ Html.RenderPartial("PageHeader", new PageHeader { ActiveMenu = Enumerations.MobileMenuItems.whatsHot, PrefetchLinks = Model.PrefetchLinks, UseAjaxForLinks = Model.UseAjaxForLinks }); }
    <div data-role="header" data-theme="c">
        <h2>Top Box Office</h2>
    </div>
	<div data-role="content">	
        <ul data-role="listview" data-theme="c">
            @this.Html.Partial("MovieList.Mobile", this.Model.BoxOfficeMovies)
        </ul>
    </div>
    <div data-role="header" data-theme="c">
        <h2>Opening This Week</h2>
    </div>
    <div data-role="content">	
        <ul data-role="listview" data-theme="c">
            @this.Html.Partial("MovieList.Mobile", this.Model.OpeningMovies)
        </ul>
    </div>
    <div data-role="header" data-theme="c">
        <h2>Also in Theaters</h2>
    </div>
    <div data-role="content">	
        <ul data-role="listview" data-theme="c">
            @this.Html.Partial("MovieList.Mobile", this.Model.InTheatersMovies)
        </ul>
    </div>
</div>

<div data-role="page" id="showtimes">
    @{ Html.RenderPartial("PageHeader", new PageHeader { ActiveMenu = Enumerations.MobileMenuItems.showtimes, PrefetchLinks = Model.PrefetchLinks, UseAjaxForLinks = Model.UseAjaxForLinks }); }
    <input type="hidden" id="currentShowtimeDay" />
    @*showtimes for...*@
	<div data-role="header" id="showtimesHeader" style="display:none;" data-theme="c">
        <h1>Theaters near <span id="currentShowtimesZip"></span></h1>
        <a href="#" id="showtimesOptionsLink" data-icon="gear" class="ui-btn-right">Options</a>
    </div>
	<div data-role="header" id="theaterHeader" style="display:none;" data-theme="c">
        <h2><span id="currentTheater"></span></h2>
        <a href="#" id="theaterBackLink" data-icon="arrow-l" class="ui-btn-left">Back</a>
    </div>
    <div data-role="content" id="showtimesOptions" style="display:none;">
        <input type="text" id="inputShowtimesZip" placeholder="Search for city or zip...">
        <div>or <a id="useCurrentLocationForShowtimes" href="#">use current location</a></div>
    </div>
    <div data-role="content" id="favoriteTheaterListContent" class="theaterListContent">	
        <ul data-role="listview" data-theme="c" id="favoriteTheaterList"></ul>
    </div>
    <div data-role="content" class="theaterListContent">
        <ul data-role="listview" data-theme="c" id="theaterList"></ul>
    </div>
    <div data-role="content" id="theaterMovieListContent">        
        <ul data-role="listview" data-theme="c"></ul>
	</div>
	<div data-role="header" id="theaterMovieHeader" style="display:none;" data-theme="c">
        <h2><span id="currentTheaterMovie"></span></h2>
        <a href="#" id="theaterMovieBackLink" data-icon="arrow-l" class="ui-btn-left">Back</a>
    </div>
    <div data-role="content" id="theaterMovie" style="display:none;"></div>
</div>

<div data-role="page" id="theaterList">
    @{ Html.RenderPartial("PageHeader", new PageHeader { ActiveMenu = Enumerations.MobileMenuItems.showtimes, PrefetchLinks = Model.PrefetchLinks, UseAjaxForLinks = Model.UseAjaxForLinks }); }
</div>

<div data-role="page" id="theaterMovieList">
    @{ Html.RenderPartial("PageHeader", new PageHeader { ActiveMenu = Enumerations.MobileMenuItems.showtimes, PrefetchLinks = Model.PrefetchLinks, UseAjaxForLinks = Model.UseAjaxForLinks }); }
</div>

<div data-role="page" id="theaterMovie">
    @{ Html.RenderPartial("PageHeader", new PageHeader { ActiveMenu = Enumerations.MobileMenuItems.showtimes, PrefetchLinks = Model.PrefetchLinks, UseAjaxForLinks = Model.UseAjaxForLinks }); }
</div>