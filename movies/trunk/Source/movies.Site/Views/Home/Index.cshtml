@model movies.Site.ViewModels.Home.Index

@{
    ViewBag.Title = "Movie Ratings - Top Box Office";
}

@section ExtraHeadContent {
    <script src="@Url.Content("~/scripts/codejkjk/codejkjk.movies.HomeIndex.js")"></script>
}

<div id="container">
    <header>
        <nav></nav>
        <input class="rounded glowing" id="q" type="text" placeholder="search + enter" />
    </header>
        
    <!-- BOX OFFICE -->
    <section id="boxOfficeView" class="content movieList" data-navitemtext="Top Box Office">
        @this.Html.Partial("MovieList", this.Model.BoxOfficeMovies)
    </section>

    <!-- UPCOMING -->
    <section id="upcomingView" class="content movieList" data-navitemtext="Coming Soon">
        @this.Html.Partial("MovieList", this.Model.UpcomingMovies)
    </section>

    <!-- SEARCH RESULTS -->
    <section id="searchResultsView" class="content movieList rounded">
    </section>

    <!-- MOVIE DETAILS -->
    <section id="movieDetails" class="rounded">
    </section>
    <div id="overlay"></div>

</div>
