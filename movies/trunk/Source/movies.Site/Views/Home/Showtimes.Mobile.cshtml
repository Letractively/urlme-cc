@model movies.Site.ViewModels.Home.Index

@{
    ViewBag.Title = "Movie Ratings - Top Box Office";
}

@section ExtraHeadContent {
}

<div data-role="page">
	<div data-role="header">
        <input type="search" value="Search..." />
        <div data-role="navbar">
            <ul>
                <li><a href="~/" data-prefetch>Top Box Office</a></li>
                <li><a href="~/showtimes" class="ui-btn-active" data-prefetch>Showtimes</a></li>
                <li><a href="~/comingsoon" data-prefetch>Coming Soon</a></li>
            </ul>
        </div>
	</div><!-- /header -->

	<div data-role="content">	
        <ul data-role="listview" data-theme="c" id="topBoxOffice">
            @this.Html.Partial("MovieList.Mobile", this.Model.BoxOfficeMovies)
        </ul>
	</div><!-- /content -->

</div><!-- /page -->