@model movies.Model.Movie

<a href="#" id="closeMovieDetailsLink">Close</a>
<img class="poster ronded" src="@this.Model.posters.detailed" />
<p class="ratingAndLength"><span class='mpaaRating'>@this.Model.mpaa_rating</span>@this.Model.Duration</p>
@if (this.Model.IsReleased) {
    this.Html.RenderPartial("Ratings", new movies.Site.ViewModels.Shared.Ratings { Movie = this.Model, RatingSize = movies.Site.Enumerations.RatingSizes.medium });
} else {
    <p class="releaseDate">@this.Model.ReleaseDate</p>
}
<p class="description">@this.Model.synopsis</p>
<p class="starring">
    <strong>Starring</strong>: 
    @{ int i = 0; }
    @foreach (var ac in this.Model.abridged_cast)
    {
        @(i == 0 ? ac.name : ", " + ac.name)
        i++;
    }
</p>
<p class="links"><a href="@(this.Model.links.alternate)trailers" target="_blank" class="trailerLink">Trailer</a><a href="@this.Model.ParentalGuideUrl" target="_blank">Parental Guide</a><a href="@this.Model.links.alternate" target="_blank">RottenTomatoes.com Link</a><a href="@this.Model.IMDbMovieUrl" target="_blank">IMDb.com Link</a></p>
<p class="share">
    <strong>Share</strong>: <input type="text" id="movieUrl" value="http://seeitornot.co/@this.Model.MovieSlug" /><span id="copyButton">Copy</span><span id="copySuccess">Copied to clipboard!</span>
</p>