@model movies.Model.Movie
@using movies.Model

<div id="movieDetails">
    <input type="hidden" id="currentMovieId" value="@this.Model.id" />
    <div class="topHalf group">
        <div class="left">
            <img class="poster rounded" src="@this.Model.posters.detailed" />

        </div>
        <div class="right">
            <span class="closeMovieDetails">Close</span>
            <h1>@this.Model.title</h1>
            <div class="ratingAndLength group"> 
                <span class='mpaaRating'>@this.Model.mpaa_rating</span>
                <div class="fbLikeContainer"><div class="fb-like" data-href="http://seeitornot.co/@this.Model.MovieSlug" data-send="false" data-layout="button_count" data-width="75" data-font="arial"></div></div>
            </div>
        
            @if (this.Model.IsReleased)
            {
                if (Model.Review != null)
                {
                <p class="ourReview medium">
                    <span class="@Model.Review.ClassName"></span>"@Model.Review.Text" <a href="@Model.Review.Url">- JohnHanlonReviews.com</a>
                </p>                
                }                
                
                this.Html.RenderPartial("Ratings", new movies.Site.ViewModels.Shared.Ratings { Movie = this.Model, RatingSize = Enumerations.RatingSizes.medium });
            }
            else
            {
                <p class="releaseDate">@this.Model.ReleaseDate</p>
            }

            <p class="starring">
                <strong>Starring</strong>: 
                @{ int i = 0; }
                @foreach (var ac in this.Model.abridged_cast)
                {
                    @(i == 0 ? ac.name : ", " + ac.name)
                    i++;
                }
            </p>
            <p class="description">@this.Model.synopsis</p>
            @*<span class="length">@this.Model.Duration</span>*@
        </div>
    </div>
    <p class="links">
        <a href="@(this.Model.links.alternate)trailers" target="_blank" class="trailerLink">Trailer</a>
        <a href="@this.Model.ParentalGuideUrl" target="_blank" class="parentalGuideLink">Parental Guide</a>
        @if (this.Model.MovieType == Enumerations.MovieType.InTheaters)
        {
            <a href="#" class="showtimesLink">Showtimes</a>
        }
        else if (this.Model.MovieType == Enumerations.MovieType.AtRedboxes)
        {
            <a href="#" class="nearbyRedboxLink">Nearby RedBox Availability</a>
        }
        
        <input type="hidden" id="movieUrl" value="http://seeitornot.co/@this.Model.MovieSlug" />
        <a class="button" id="copyButton"><img class="link" src="~/content/images/transparent.png" />Copy Link</a><span id="copySuccess">✓</span>

        @*<span id="copyButton">Copy</span><span id="copySuccess">Copied to clipboard!</span>*@

        @if (!this.Model.IsReleased) // if it's not released, then the ratings will NOT show up, and the ratings are also links to RT.com and IMDb.com. therefore, provide them here for the user
        {
@*        <a href="@this.Model.links.alternate" target="_blank">RottenTomatoes.com Link</a>
        <a href="@this.Model.IMDbMovieUrl" target="_blank">IMDb.com Link</a>*@
        }
    </p>
@*    <p class="share">
        <strong>Share</strong>: 
    </p>*@
</div>
<div id="movieShowtimes" class="hidden">
    <span class="closeMovieDetails">Close</span>
    <a class="backToMovieDetails" href="#">←&nbsp&nbsp;@this.Model.title</a>
    <p id="theatersForMovieList"></p>
</div>
<div id="redboxAvails" class="hidden">
    <span class="closeMovieDetails">Close</span>
    <a class="backToMovieDetails" href="#">←&nbsp&nbsp;@this.Model.title</a>
    <p id="redboxAvailsList"></p>
</div>