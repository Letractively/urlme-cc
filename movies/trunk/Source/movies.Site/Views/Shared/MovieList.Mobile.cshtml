@model Dictionary<string, movies.Model.Movie>

@foreach (var movie in this.Model.Values)
{
    if (movie.alternate_ids != null)
    {
    <li><a href="~/@movie.MovieSlug">
        <img src="@movie.posters.thumbnail" />
        <h3>@movie.title<span class="mpaaRating">@movie.mpaa_rating</span></h3>
        @if (movie.IsReleased) {
            <p class="ratings small">
                <span data-rtratingtitle="@movie.ratings.critics_rating" class="rottenTomato icon"></span><span>@movie.ratings.critics_score</span>
                <span data-rtratingtitle="@movie.ratings.audience_rating" class="rottenTomato icon"></span><span>@movie.ratings.audience_score</span>
                <span class='imdb icon'></span><span data-imdbq="@movie.IMDbQ" data-imdbmovieid="@movie.alternate_ids.imdb" class="@movie.IMDbClass">@movie.IMDbRating</span>
            </p>
        } else {
            <p class="releaseDate">@movie.ReleaseDate</p>
        }
    </a></li>
    }
}
