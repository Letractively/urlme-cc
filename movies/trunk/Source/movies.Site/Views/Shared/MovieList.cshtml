@model Dictionary<string, movies.Model.Movie>

@foreach (var movie in this.Model.Values)
{
    if (movie.Alternate_Ids != null)
    {
    <div class="movie rounded glowing" data-rtmovieid="@movie.Id">
        <a class="movieDetailsLink" href="#"><img src="@movie.Posters.Detailed" /></a>
        <div class="details gradient">
            <p class="ratingAndLength">
                @movie.Duration<a href="@movie.ParentalGuideUrl" class='mpaaRating external' target='_blank' title='Link to Parents Guide on IMDb.com'>@movie.Mpaa_Rating</a>
            </p>
            @if (movie.IsReleased) {
                <div class="ratings"><a href="@movie.Links.Alternate" class='@movie.CriticsClass rottenTomato' target='_blank' title="Critics score on RottenTomatoes">@movie.Ratings.Critics_Score<sup>%</sup></a><a href="@movie.Links.Alternate" class='@movie.AudienceClass rottenTomato' target='_blank' title="Audience score on RottenTomatoes">@movie.Ratings.Audience_Score<sup>%</sup></a><a data-imdbmovieid="@movie.Alternate_Ids.IMDb" class='imdb @(movie.IMDbLoaded ? "" : "imdbNotSet")' href="@movie.IMDbMovieUrl" target='_blank' title="@string.Format("{0} votes on IMDb.com", movie.IMDbVotes)">@(movie.IMDbRating != null ? movie.IMDbRating.ToLower() : "")</a></div>
            } else {
                <p class="releaseDate">@movie.ReleaseDate</p>
            }
        </div>
    </div>    
    }
}