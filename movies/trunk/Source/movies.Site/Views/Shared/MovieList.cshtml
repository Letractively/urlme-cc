@model Dictionary<string, movies.Model.Movie>

@foreach (var movie in this.Model.Values.Where(x => !x.posters.detailed.Contains("poster_default.gif")))
{
    if (movie.alternate_ids != null)
    {
    <div class="movie rounded glowing">
        <a class="poster shadow" href="~/@movie.MovieSlug" style="background:url('@movie.posters.detailed');"></a>
        <div class="details gradient">
            <p class="ratingAndLength">
                @movie.Duration<a href="@movie.ParentalGuideUrl" class='mpaaRating' target='_blank' title='Link to Parents Guide on IMDb.com'>@movie.mpaa_rating</a>
            </p>
            @if (movie.IsReleased)
            {
                this.Html.RenderPartial("Ratings", new movies.Site.ViewModels.Shared.Ratings { Movie = movie, RatingSize = movies.Site.Enumerations.RatingSizes.smaller });
            }
            else
            {
                <p class="releaseDate">@movie.ReleaseDate</p>
            }
        </div>
    </div>    
    }
}










