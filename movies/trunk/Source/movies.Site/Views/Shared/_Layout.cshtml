<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/content/site.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/content/jquery.mobile-1.0.1.min.css")" rel="stylesheet" />
    <script type="text/javascript">
        var apiBaseUrl = '@Url.Content("~/api/")';
    </script>
    <script src="@Url.Content("~/scripts/jquery-1.7.1.min.js")"></script>
    <script src="@Url.Content("~/scripts/codejkjk/codejkjk.js")"></script>
    <script src="@Url.Content("~/externals/local-cache/local-cache.js")"></script>
    <script src="@Url.Content("~/scripts/codejkjk/codejkjk.movies.Defaults.js")"></script>
    <script src="@Url.Content("~/scripts/codejkjk/codejkjk.movies.Api.js")"></script>
    <script src="@Url.Content("~/scripts/plugins/jsrender.js")"></script>
    <script src="@Url.Content("~/scripts/plugins/zeroclipboard/zeroclipboard.js")"></script>
    <script type="text/javascript">
        // var clip = new ZeroClipboard.Client();
        ZeroClipboard.setMoviePath('@Url.Content("~/scripts/plugins/zeroclipboard/zeroclipboard.swf")');
    </script>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-26494629-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
    @RenderSection("ExtraHeadContent", required: false)
</head>

<body>
    @RenderBody()

    <script id="navTemplate" type="text/x-jquery-tmpl">
        <a href="#" class="{{=className}}">{{=text}}</a>
    </script>
    <script id="movieDetailsTemplate" type="text/x-jquery-tmpl">
        <a href="#" id="closeMovieDetailsLink">Close</a>
        <img class="poster" src="{{=posters.detailed}}" />
        <h2>{{=title}}</h2>
        <p class="description">{{=$ctx.Snippet(synopsis, 400)!}}</p>
        <a href="{{=links.alternate}}trailers" target="_blank" class="trailerLink external">View trailer</a>
        <p class="ratingAndLength"><strong>Rated</strong>: <a href="{{=ParentalGuideUrl}}" class='mpaaRating external' target='_blank' title='Link to Parents Guide on IMDb.com'>{{=mpaa_rating}}</a>{{=Duration}}</p>
        {{#if IsReleased}}
            <div class="ratings"><a href="{{=links.alternate}}" class='{{=CriticsClass}} rottenTomato' target='_blank'>{{=ratings.critics_score}}<sup>%</sup></a><a href="{{=links.alternate}}" class='{{=AudienceClass}} rottenTomato' target='_blank'>{{=ratings.audience_score}}<sup>%</sup></a><a href="{{=IMDbMovieUrl}}" data-imdbmovieid="{{=alternate_ids.imdb}}" class='imdb {{=IMDbClass}}' target='_blank'>{{=IMDbRating}}</a></div>
        {{else}}
            <p class="releaseDate">{{=ReleaseDate}}</p>    
        {{/if}}
        <p class="starring">
            <strong>Starring</strong>: 
            {{#each abridged_cast}}{{#if $itemNumber == 1 }}{{=name}}{{else}}, {{=name}}{{/if}}{{/each}}
        </p>
        <p class="share">
            <strong>Share</strong>: <input type="text" id="movieUrl" value="@Url.Content("~/"){{=MovieSlug}}" /><span id="copyButton">Copy</span>
        </p>
    </script>
</body>
</html>
