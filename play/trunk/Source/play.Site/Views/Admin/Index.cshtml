@model List<play.Site.Models.PlayOrder>

@{
    Layout = null;
}

<html>
    <head>
        @Styles.Render("~/content/site.css")
    </head>
    <body class="adminIndex">
        <h2>Admin</h2>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th># Couple Tix</th>
                    <th># Indiv. Tix</th>
                    <th>Platform</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.CreateDate.ToString("yyyy-MM-dd")</td>
                        <th>@order.Name</th>
                        <th>@order.CoupleTicketCount</th>
                        <th>@order.IndividualTicketCount</th>
                        <th>@order.Platform</th>
                        <th>@order.Status</th>
                    </tr>    
                }
            </tbody>
        </table>
    </body>
</html>




