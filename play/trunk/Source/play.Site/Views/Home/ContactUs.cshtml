@section desktopBody {
    @{ Html.RenderPartial("ContactUsForm", new play.Site.ViewModels.ContactUs { MobileOrDesktop = "dt" }); }
}

@section mobileBody {
    @{ Html.RenderPartial("ContactUsForm", new play.Site.ViewModels.ContactUs { MobileOrDesktop = "m" }); }
}

@section scripts {
    <script>
        $(function () {
            var init = function () {
                $("form").submit(function (e) {
                    var form = $(this);
                    var name = $.trim(form.find("#Name").val());
                    var email = $.trim(form.find("#Email").val());
                    var msg = $.trim(form.find("#Message").val());
                    if (name && email && msg && ihdavis.form.emailIsValid(email)) {
                        form.find("#Name").val(name);
                        form.find("#Email").val(email);
                        form.find("#Message").val(msg);
                        return true;
                    }
                    
                    alert("Please fill out all fields.");
                    return false;
                });
            };

            init();
        });
    </script>
}

