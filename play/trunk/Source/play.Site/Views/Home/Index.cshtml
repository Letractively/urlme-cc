@{
    ViewBag.Title = "Crazy Capers at Coco's Coffee Shop";
}

@section desktopBody {
    <div class="left col">
        <h2>About the Play</h2>
        @{ Html.RenderPartial("AboutPlay"); }
        <div class="orderTicketsContainer">
            <div class="orderTickets">Order Tickets</div>
        </div>
    </div>
    <div class="right col">
        <h2>About the Cause</h2>
        <img src="~/content/images/team-marshall.png" />
        @{ Html.RenderPartial("AboutCause"); }
    </div>    
}

@section mobileBody {
    <h2>About the Play</h2>
    <div class="aboutPlay">
        @{ Html.RenderPartial("AboutPlay"); }
        <div class="orderTicketsContainer">
            <div class="orderTickets">Order Tickets</div>
        </div>
    </div>
    <h2 class="borderTop">About the Cause</h2>
    <div class="aboutCause">
        <img src="~/content/images/team-marshall.png" />
        @{ Html.RenderPartial("AboutCause"); }
    </div>
}
