@model play.Site.Models.PlayOrder

@{
    ViewBag.Title = "Index";
}

@section desktopBody {
    @{ Html.RenderPartial("OrderForm", "dt"); }
}

@section mobileBody {
    @{ Html.RenderPartial("OrderForm", "m"); }
}

@section scripts {
<script>
    $(function () {
        $(".buttonset").buttonset();

        // bind controls

        // click a counter up/down (+/-) button
        $(".countButton").click(function (e) {
            var btn = $(this);
            var countUp = btn.hasClass("countUp");
            var display = countUp ? btn.next("span") : btn.prev("span");
            var currentCount = parseInt(display.text());
            if (!currentCount && !countUp)
                return; // zero. can't get lower than zero.
            if (countUp) {
                currentCount++;
            } else {
                currentCount--;
            }
            display.text(currentCount).focus();
        });
    });
</script>
}
