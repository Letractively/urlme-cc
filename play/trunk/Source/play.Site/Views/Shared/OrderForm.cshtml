@model string

<div class="orderIndex">
@using (Html.BeginForm("Index", "Account"))
{
    <div class="playDates buttonset group">
        <label>Which day?</label>
        <div>
            <input type="radio" id="@(Model + "_day1")" name="playDate" value="5/17/2013" /><label class="radioLabel" for="@(Model + "_day1")">Fri. May 17</label>
            <input type="radio" id="@(Model + "_day2")" name="playDate" value="5/18/2013" /><label class="radioLabel" for="@(Model + "_day2")">Sat. May 18</label>
        </div>
    </div>
    <div class="group">
        <label>How many couple tickets?</label>
        <div class="hint">Each couple ticket is for 2 people. 1 would be for 2 people, 2 for 4 people, etc...</div>
        <div class="counter group"><span class="countUp countButton">+</span><span class="countDisplay" id="@(Model + "_coupleTicketCount")">0</span><span class="countDown countButton">−</span></div>
    </div>
    <div class="group">
        <label>How many individual tickets?</label>
        <div class="hint">Example scenario: a couple bringing a friend could be 1 couple ticket (see above), 1 individual ticket.</div>
        <div class="counter group"><span class="countUp countButton">+</span><span class="countDisplay" id="@(Model + "_individualTicketCount")">0</span><span class="countDown countButton">−</span></div>
    </div>    
}
</div>