<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="content">
        <header>
            <div id="quickDetails">
                <div class="date">May 17 & 18</div>
                <div class="time">6:30pm</div>
                <div class="where">Commonwealth Chapel<br />1836 Park Ave<br />Richmond, VA 23220</div>
            </div>
        </header>
        <div id="body">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
