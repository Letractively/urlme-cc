@using ianhd.core.Extensions

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"> 
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/content/favicon.jpg" />

    @Styles.Render("~/Content/css")
    
    @Html.Partial("BeforeEndHead")
</head>
<body>
    @Html.Partial("AfterBody")
    <header class="group">
        <div class="content">
            <i class="fa fa-bars"></i>
            <a id="logo" href="~/"></a>
            @*<div id="fbLikeContainer">@Html.Partial("FacebookLike")</div>*@
            <i class="fa fa-search searchIcon"></i>
        </div>
    </header>
    <div id="navBar" class="greenGradient bottomShadow">
        <div class="content group">
            <nav>
                <ul>
                    <li><a class="navItem selected" href="~/showtimes">In Theaters</a></li>
                    <li><a class="navItem" href="~/showtimes">Coming Soon</a></li>
                </ul>
            </nav>
            <input type="text" class="search" placeholder="Search..." />
        </div>
    </div>
    @RenderBody()

    @Scripts.Render("~/bundles/js/jquery")

    @* bootstrap *@
    @Scripts.Render("//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js")

    <script>var apiBaseUrl = '@Url.Content("~/")';</script>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/scripts/ianhd.app.js")
</body>
</html>
