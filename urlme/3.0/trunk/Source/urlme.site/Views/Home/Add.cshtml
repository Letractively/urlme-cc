@{
    Layout = null;
    var loggedInClass = "";
}

<!DOCTYPE html>
<html>
<head>
@Styles.Render("~/Content/css")
</head>
<body class="addBody">
    <div>
        <div class="logo"></div>
    </div>
    <form class="linkForm form" role="form">
        <div class="form-group">
            <input type="url" class="form-control @loggedInClass" placeholder="Paste a link to shorten it" autofocus="autofocus" data-bind="value: longUrl" />
        </div>
        @if (Request.IsAuthenticated)
        {
            <div class="form-group">
                <span>http://urlme.cc/</span><input type="text" class="path form-control" placeholder="custom-path (optional)" data-bind="value: path" />
            </div>
        }
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Shorten</button>
        </div>
        <div class="result @loggedInClass" data-bind="visible: result" style="display:none"><span class="arrow noSelect">➔</span><span data-bind="text: result"></span></div>
    </form>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</html>
