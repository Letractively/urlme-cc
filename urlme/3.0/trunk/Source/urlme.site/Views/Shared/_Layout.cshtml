<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/content/link.png" />
    <title>UrlMe</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css")
</head>
<body>
    <div class="container body-content">
        <button id="theRealCopy" type="button" class="copy btn btn-default btn-sm">
            <i class="fa fa-copy"></i>&nbsp;&nbsp;Copy
        </button>
        <div class="alert alert-success text-center primary">Success!</div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
