<div class="row bigBottomBuffer">
    <form class="linkForm form form-inline" role="form">
        <div class="form-group">
            <input type="url" class="form-control" placeholder="Paste a link to shorten it" autofocus="autofocus" data-bind="value: longUrl" />
            @if (Request.IsAuthenticated)
            {
                <span>http://urlme.cc/</span><input type="text" class="form-control" placeholder="Custom path (optional)" data-bind="value: longUrl" />    
            }
            <button type="submit" class="btn btn-primary">Shorten</button>
        </div>
    </form>
</div>
<div class="row bottomBuffer" data-bind="visible: result">
    <span data-bind="text: result"></span>
</div>