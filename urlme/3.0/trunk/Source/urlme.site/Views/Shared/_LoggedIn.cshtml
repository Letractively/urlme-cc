<div style="display:none" data-bind="visible: loading">
    <em>Loading...</em>
</div>
<div style="display:none" data-bind="visible: !items().length && !loading()">
    <em>You don't have any links. Use the form above to add your first.</em>
</div>
<table style="display:none" data-bind="visible: items().length" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
    <thead>
        <tr>
            <th>Long Url</th>
            <th>Short Url</th>
            <th class="copyCell"></th>
            <th>Created</th>
            <th># Hits</th>
            <th></th>
        </tr>
    </thead>
    <tbody data-bind="foreach: items">
        <tr data-bind="attr: { 'data-item-id': LinkId }">
            <td><a target="_blank" data-bind="attr: { 'href': DestinationUrl, 'title': DestinationUrl }, text: LongUrl"></a></td>
            <td><a target="_blank" data-bind="attr: { 'href': ShortUrl }, text: ShortUrl"></a></td>
            <td class="copyCell">
                <button type="button" class="copy btn btn-default btn-sm">
                    <i class="fa fa-copy"></i>&nbsp;&nbsp;Copy
                </button>
            </td>
            <td data-bind="text: Created"></td>
            <td data-bind="text: Hits"></td>
            <td>
                <button type="button" class="delete btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Delete
                </button>
            </td>
        </tr>
    </tbody>
</table>
